<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/dac_db_page_heropedia_creeps.vcss_c" />
	</styles>
	<snippets>

    <snippet name="RoundSnippet">
      <Panel class="RoundContainer">
        <Panel id="RoundPanel">
          <Panel id="PlayerProfileAvatar"/>
          <!--<Label class="Header" text="#DAC_InGame_Round"/>-->
          <Label class="Header" text="{s:round_name}"/>
        </Panel>
        <Panel id="ItemList" class="CreepListContainer"/>
      </Panel>
    </snippet>

    <snippet name="HeroSnippet">
      <Panel class="CreepContainer">
          <Image id="HeroIcon" class="HeroIcon" src="s2r://panorama/images/heroes/spellicons/empty_png.vtex"/>
          <!--<DACUnitScenePanel id="UnitPortraitView" map="scenes/shop" camera="cam_main" renderdeferred="false" usePortraitData="true"/>-->
          <Label class="HeroLabel" text="{s:hero_name}"/>
      </Panel>
    </snippet>
    
	</snippets>
	
	<DACHeropediaCreepsPage hittest="false">

    <Panel id="CreepList" class="HeropediaList"/>

	</DACHeropediaCreepsPage>
</root>
