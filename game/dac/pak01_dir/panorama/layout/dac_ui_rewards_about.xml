<root>

	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/dac_db_control_battlepass.vcss_c" />
	</styles>

	<snippets>
		<snippet name="DynamicReward">
			<Panel class="DynamicReward" >
				<Label class="DailyChallengeRewardPlacement" text="{d:reward_level}" />
				<Label class="DailyChallengeReward" text="{d:points_for_reward}" />
			</Panel>
		</snippet>
	</snippets>

	<DACRewardsAbout>
		<Panel class="RewardsAbout" >
			<Label class="RewardsLabel" text="#DAC_RewardAbout_Overview" />
			<Panel class="DynamicReward RewardsAboutHeader" >
				<Label class="DailyChallengeRewardPlacement" text="#DAC_RewardsAbout_Placement" />
				<Label class="DailyChallengeReward" text="#DAC_RewardsAbout_PointsEarned" />
			</Panel>
			<Panel id="DynamicRewardsContainer">
			</Panel>
		</Panel>
	</DACRewardsAbout>
</root>