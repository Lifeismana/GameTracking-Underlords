<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/dac_global.vcss_c" />
		<include src="s2r://panorama/styles/dac_ui_unit_modifiers.vcss_c" />
	</styles>
  
  <snippets>

    <snippet name="StatusSnippet">
      <Panel class="StatusContainer">
        <Image src="s2r://panorama/images/buffstatus/silenced_png.vtex" />
        <Image id="Status" />
      </Panel>
    </snippet>
    
    <snippet name="ModifierSnippet">
      <Panel class="ModifierContainer">
        <Image src="s2r://panorama/images/modifiers/modifier_bg_png.vtex" />
        <Image id="Modifier" />
      </Panel>
    </snippet>
    
  </snippets>

  <DACUnitModifiers>
    <Panel id="StatusAndModifiers">

      <Panel id="UnitStatus" class="UnitBarButtonContainer">
        <Panel class="ActiveStatus">
          <Panel id="StatusSnippetContainer">
            <!--dynamic content-->
          </Panel>
        </Panel>
      </Panel>

      <Panel id="UnitModifiers" class="UnitBarButtonContainer">
        <Panel class="ActiveModifiers">
          <Panel id="ModifierSnippetContainer">
            <!--dynamic content-->
          </Panel>
        </Panel>
      </Panel>
    </Panel>
    
	</DACUnitModifiers>
</root>
