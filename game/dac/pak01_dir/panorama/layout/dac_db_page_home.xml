<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/dac_global.vcss_c" />
		<include src="s2r://panorama/styles/dac_db_page_home.vcss_c" />
		<include src="s2r://panorama/styles/dac_ui_underlord.vcss_c" />
		<include src="s2r://panorama/styles/dac_db_control_battlepass.vcss_c" />
	</styles>
	<snippets>
	</snippets>

	<DACHomePage hittest="false" class="DashboardPage">

		<Panel id="BetaBackground">
			<Image id="Layer6" src="s2r://panorama/images/dashboard/background/flattened-bg_jpg.vtex" />
			<Image id="Layer5" src="s2r://panorama/images/dashboard/underlords-v2_png.vtex" />
		</Panel>

		<Panel id="ForegroundContainer">
			
			<Panel id="MainNav">
				<Panel class="MainNavButton MainNav01" onactivate="DACSelectDashboardButton('HeropediaContainer'); DACShowHeropediaPage(); PlaySoundEffect( 'DAC_UI.MainMenu_SeasonInfoActivate' )">
					<Label class="MainNavLabel DistressedFont" text="#DAC_MainNav_SeasonInfo"/>
				</Panel>
				<Panel class="MainNavButton MainNav02 AchievementsButton" onactivate="DACSelectDashboardButton('AchievementsContainer'); DACShowAchievementsPage();">
					<Label class="MainNavLabel DistressedFont" text="#DAC_MainNav_Achievements"/>
				</Panel>		
				<Panel class="MainNavButton MainNav03 LoadoutButton" onactivate="DACSelectDashboardButton('LoadoutButtonContainer'); DACShowLoadoutPage(); PlaySoundEffect( 'DAC_UI.MainMenu_LoadoutActivate' );">
					<Label class="MainNavLabel DistressedFont" text="#DAC_MainNav_Loadout"/>
				</Panel>
				<Panel class="MainNavButton MainNavBattlePass" onactivate="DACSelectDashboardButton('BattlePassContainer'); DACShowRewardsPage(); PlaySoundEffect( 'DAC_UI.MainMenu_ProtPassActivate' );">
					<Label class="MainNavLabel DistressedFont" text="#DAC_MainNav_Battlepass"/>
					<DACControlBattlePass id="BattlePassOverview" class="OnDACHomePage HideSectionTitle HideQuests"/>
				</Panel>
			</Panel>

			<Panel class="UnderlordSelectContainer HomeMenu" id="UnderlordSelector">
				<Label class="DistressedFont" html="true" hittest="false" text="#DAC_Underlord_NoneSelected" id="SelectEmpty" onactivate="DACSelectDashboardButton('UnderlordsContainer'); DACShowUnderlordsPage(); PlaySoundEffect( 'DAC_UI.MainMenu_LoadoutActivate' )"/>
				<Panel class="UnderlordSelectTopContainer">
					<Panel class="UnderlordSelectBackground"/>
					<Panel class="UnderlordSelectTop">
						<Button id="LeftUnderlordArrow" class="UnderlordArrow ArrowLeft" onactivate="DACHomeChangeUnderlord(-1)"/>
						<Panel class="UnderlordButton">
							<Label class="DistressedFont" html="true" text="{s:underlord_name}"/>
						</Panel>
						<Button id="RightUnderlordArrow" class="UnderlordArrow" onactivate="DACHomeChangeUnderlord(1)"/>
					</Panel>
				</Panel>
				<Panel class="UnderlordSelectMiddleContainer">
					<Panel id="ViewDetails" class="MiddleButton" onactivate="DACSelectDashboardButton('UnderlordsContainer'); DACShowUnderlordsPage(); PlaySoundEffect( 'DAC_UI.MainMenu_LoadoutActivate' )">
						<Label text="#DAC_Reward_Item_ViewDetails"/>
					</Panel>
				</Panel>
				<Panel class="UnderlordSelectBottomContainer">
					<Label class="TalentsUnlockedNumbers HeadlineFont" text="#DAC_Reward_Item_TalentCount"/>
					<Label class="TalentsUnlocked" text="#DAC_Reward_Item_TalentUnlockedLabel"/>
					<Image class="InfoImage" onmouseover="DACShowTalentInfoTooltip()" onmouseout="DACHideTalentInfoTooltip()" onactivate="DACShowTalentInfoPopup()"/>
				</Panel>
			</Panel>

			<Panel id="LogoArea">
				<Panel id="TitleImage"/>
				<Label id="EarlyAccessLabel" class="PlayLabel" text="#DAC_OpenBeta"/>
			</Panel>

			<Panel id="ButtonContainer">
				<Label text="#dac_settings_ios_muted" id ="HomeIOSMuted" />
				<Label class="PartyNotReadyLabel" text="#DAC_DBHome_Party_Member_Not_Ready" />
				<Panel class="PlayButtonContainer">
					<Button id="PlayButton" class="HomeButton" onactivate="DACMatchTypeSelect(); PlaySoundEffect( 'DAC_UI.MainMenu_PlayActivate' );" onmouseover="PlaySoundEffect('DAC_UI.MainMenu_PlayHover')">
						<Label class="HeadlineFont" text="#DAC_DBHome_Mobile_Play" hittest="false" />
					</Button>
					<Label text="#DAC_DBHome_Play_Party" id="LobbyPlayButtonText"/>
				</Panel>
				
				<Panel class="ReconnectButtonContainer">
					<Button id="ReconnectButton" class="ReconnectButton" onactivate="DACReconnectLobby()">
						<Label class="ReconnectButton HeadlineFont" text="#DAC_Home_Reconnect"/>
					</Button>
					<Button id="LeaveButton" onactivate="DACLeaveLobby()">
						<Label text="#DAC_Home_LeaveGame"/>
					</Button>
				</Panel>	
			</Panel>

			<Button id="UnderlordsButton"  onactivate="DACSelectDashboardButton('UnderlordsContainer'); DACShowUnderlordsPage(); PlaySoundEffect( 'DAC_UI.MainMenu_LoadoutActivate' )">
				<Label text="#DAC_Home_Underlords"/>
			</Button>

			<Panel class="RankIndicator DefaultHidden" id="RankContainer">
				<DACRankIcon id="RankIcon" iconstyle="standalone" />
				<Panel class="RankHoverContainer">
					<Panel class="NameContainer">
						<Label id="PlayerName" html="true" text="{g:dac_persona:b:player_accountid}" />
						<Label id="PlayerRank" html="true"  text="#DAC_LevelUp_Rank_New" />
						<Label id="PlayerLeaderboardPosition" html="true"  text="#DAC_Leaderboard_Rank" />
					</Panel>
					<Panel class="PlayerRankScoreContainer">
						<Label id="PlayerRankScore" html="true" text="#DACRankPoints" />
						<ProgressBar id="PlayerRankProgressBar" />
					</Panel>
				</Panel>	
			</Panel>

			<Panel class="SafeArea" hittest="false">
				<Panel id="SocialPanelButton" onactivate="DACToggleSocialPanel(); PlaySoundEffect('DAC_UI.MainMenu_SocialActivate')" onmouseover="PlaySoundEffect(DAC_UI.MainMenu_SocialHover')">
					<Panel class="SocialViolatorList">
						<Panel class="SocialViolator PartyInvitesViolator">
							<Panel class="InviteIcon"/>
							<Panel class="InviteIconBright"/>
						</Panel>
						<Panel class="SocialViolator PartyReadyViolator"/>
					</Panel>
				</Panel>
			</Panel>

			<Panel id="SocialPanel" hittest="false">
				<Panel id="SocialPanelClickEater" hittest="true" onactivate="DACToggleSocialPanel()"/>
				<Panel id="SocialPanelContents" hittest="true" onactivate="">
					<Panel id="SteamLoginRequired">
						<Button class="SocialButtonClose" onactivate="DACToggleSocialPanel()" />
						<Panel id="SteamLoginRequiredContents">
							<Panel id="SteamLogo"/>

							<Button class="PopupButton LoginButton" id="SteamLoginButton" onactivate="DACSteamLogin()">
								<Label text="#DAC_SteamAccountLogin" />
							</Button>
							<Button class="PopupButton LoginButton" id="SteamReconnectButton" onactivate="DACSteamReconnect()">
								<Label text="#DAC_Home_Reconnect" />
							</Button>
							<Button class="PopupButton LoginButton" id="SteamCreateButton" onactivate="DACSteamCreateAccount()">
								<Label text="#DAC_SteamCreateAccount" />
							</Button>
							<Panel class="LoginDescContainer">
								<Panel class="LogInDesc">
									<Panel class="LogInDescBullet"/>
									<Label text="#DAC_SteamLogIn_Desc1" class="LogInDescText"/>
								</Panel>
							</Panel>
						</Panel>
					</Panel>

					<Panel class="ConnectingContainer">
						<Panel id="ConnectingDesc">
						<Panel id="SteamLogoThrobber">
							<Panel id="steamlogothrobber_bg" class="SteamLogoAnimated"/>
							<Panel id="radialMask" class="SteamLogoAnimated">
								<Panel id="radial3" class="SteamLogoAnimated"/>
							</Panel>
						</Panel>
						<Panel id="ConnectingLabel">
							<Label text="#DAC_SteamLogIn_Connecting"/>
						</Panel>
						</Panel>
						<Button class="PopupButton LoginButton" id="CancelLoginButton" onactivate="DACCancelSteamLogin()">
							<Label text="#Cancel" />
						</Button>
					</Panel>

					<Panel id="SocialPanelHeader">
						<Button class="SocialButtonClose" onactivate="DACToggleSocialPanel()" />
						<Button id="SocialButtonFriends" class="SocialTabButton" onactivate="DACSelectSocialTab( 'Friends' ); PlaySoundEffect('DAC_UI.SocialMenu_Activate')">
							<Label class="SocialTabTitle" text="#DAC_Social_FriendsTab"/>
						</Button>
						<Button id="SocialButtonParty" class="SocialTabButton" onactivate="DACSelectSocialTab( 'Party' ); PlaySoundEffect('DAC_UI.SocialMenu_Activate')">
							<Label class="SocialTabTitle" text="#DAC_Social_PartyTab"/>
							<Panel class="SocialViolatorList">
							<Panel class="SocialViolator PartyInvitesViolator">
								<Panel class="InviteIcon"/>
								<Panel class="InviteIconBright"/>
							</Panel>
								<Panel class="SocialViolator PartyReadyViolator"/>
							</Panel>
						</Button>
					</Panel>

					<Panel id="SocialPanelBody">
						<Panel id="SocialBodyFriends" class="SocialPanel">
							<DACFriendMenu id="SocialFriends" />
						</Panel>
						<Panel id="SocialBodyParty" class="SocialPanel">
							<DACParty id="SocialParty"/>
						</Panel>
					</Panel>
					<Panel id="SocialPanelFooter">
					</Panel>
					</Panel>	
			</Panel>

			<Panel class="ReadyUpContainer SafeArea">
				<Button id="ReadyUpButton" class="ReadyUpButton" onactivate="DACPartyMemberToggleReady(); PlaySoundEffect( 'DAC_UI.MainMenu_PlayActivate' );" onmouseover="PlaySoundEffect('DAC_UI.MainMenu_PlayHover')">
					<Label class="DistressedFont" text="#DAC_DBHome_ReadyUp" hittest="false" />
				</Button>
			</Panel>
		</Panel>
	</DACHomePage>
</root>