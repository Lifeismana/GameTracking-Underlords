<root>

	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/dac_db_control_battlepass.vcss_c" />
	</styles>

	<DACDailyChallenge>
		<Panel class="DailyChallenge" >
			<Panel class="DailyChallengeContainer">
				<Panel class="UpperContainer">
					<Panel class="DailyChallengeDescContainer">
						<Label class="DailyChallengeDesc" text="{s:challenge_text}" />
					</Panel>
					<ProgressBar value="0" max="1" id="ChallengeProgress" />
				</Panel>
				<Panel class="LowerContainer">
					<Button class="DailyChallengeRerollButton" onactivate="DACDailyChallengeReroll()"/>
					<Panel id="DailyChallengeClaimButtonContainer">
						<Button class="DailyChallengeClaimButton" onactivate="DACDailyChallengeClaim()"/>
						<DACParticleScenePanel class="DailyChallengeClaimFX" hittest="false" startActive="true" cameraLeft="0" cameraUp="0" particleName="econ/s0/particles/battlepass/s0_battlepass_claim_reward_idle.vpcf" fov="-200" />
						<DACParticleScenePanel id="ClaimActivateFX" class="DailyChallengeClaimFX" hittest="false" startActive="false" cameraLeft="0" cameraUp="0" particleName="econ/s0/particles/battlepass/s0_battlepass_claim_reward.vpcf" fov="-200" />						
					</Panel>
					<Label class="RerollLabel" id="RerollAtText" text="#DAC_Challenge_RerollAt"/>
					<Label class="RerollLabel" id="RerollAvailableText" text="#DAC_Challenge_RerollAvailableAt"/>
					<Label class="RerollLabel" id="RerollClaimableText" text="#DAC_Challenge_Claimable"/>
					<Panel class="RewardBackground">
						<Panel class="DailyChallengeRewardContainer">
							<Label class="DailyChallengeReward" text="{d:challenge_reward_amount}" />
							<Label class="BPXPLabel" text="#DAC_BP_XP" />
						</Panel>
					</Panel>		
				</Panel>		
			</Panel>
			<Label class="ProgressRemaining" text="{d:challenge_progress} / {d:challenge_max_progress}"/>
			<Label class="DailyChallengeComplete" text="#DAC_Challenge_ChallengeComplete" />
		</Panel>
	</DACDailyChallenge>
</root>