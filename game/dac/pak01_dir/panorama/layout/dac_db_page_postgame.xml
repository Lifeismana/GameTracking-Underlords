<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/dac_db_page_postgame.vcss_c" />
	</styles>

	<snippets>
		<snippet name="HeroIcon">
			<Panel class="HeroIconPanel" onactivate="DACShowHeroPopup(1)">
				<Label class="HeroRank" text="{s:rank}"/>
				<Image id="HeroImage"/>
			</Panel>
		</snippet>


	</snippets>

	<DACPagePostGame onactivate="" class="DashboardPage" >

		<Panel id="StatsPage" class="OverlayContainer">
			<Panel class="PlaceContainer">
				<Label class="PlaceTitle" text="#DAC_InGame_UserDiedPlace"/>
				<Label class="PlaceQuote" text="{s:result_quote}"/>
			</Panel>

			<Panel class="StatsContainer">
				<Panel id="RoundsWon" class="StatsSubContainer">
					<Label class="BigStat" text="{d:rounds_won}" />
					<Label class="StatDescription tilt-left" text="#DAC_EndGame_RoundsWon" />
				</Panel>
				<Panel id="EndGameDamageDealt" class="StatsSubContainer">
					<Label class="BigStat" text="{d:damage_dealt}" />
					<Label class="StatDescription tilt-right" text="#DAC_EndGame_DamageDealt" />
				</Panel>
				<Panel id="GoldEarned" class="StatsSubContainer">
					<Label class="BigStat" text="{d:gold_earned}" />
					<Label class="StatDescription tilt-left" text="#DAC_EndGame_GoldEarned" />
				</Panel>
			</Panel>

			<Panel class="StatsMainRow">

				<Panel class="SynergiesColumn StatsColumn">
					<Label class="FinalCrewTitle tilt-right" text="#DAC_PostGame_Alliances_Title"/>
				
					<Panel id="SynergiesContainer">
						<!-- Code generated -->
					</Panel>
				</Panel>

				<Panel class="HeroesColumn StatsColumn">
					<Label class="FinalCrewTitle tilt-left" text="#DAC_FinalCrew_Title"/>

					<Panel id="HeroesContainer" class="HeroRoster">
						<!-- Code generated -->
					</Panel>
				</Panel>

				<Panel class="ItemsColumn StatsColumn">
					<Label class="FinalCrewTitle tilt-right" text="#DAC_PostGame_GlobalItems_Title"/>

					<Panel id="ItemsContainer">
						<!-- Code generated -->
					</Panel>

					<Label class="NoGlobalItemsLabel" text="#DAC_PostGame_NoGlobalItems" />
				</Panel>
			</Panel>
		</Panel>

		<Panel id="ScoreboardPage" class="OverlayContainer">
			<Label class="PlaceTitle" text="#DAC_PostGame_Scoreboard_Title"/>
			<DACPostGameScoreboard id="Scoreboard" />
		</Panel>
    
		<Panel id="SeasonProgressPage" class="OverlayContainer">
			<Panel class="SeasonProgressHeaderContainer">
				<Panel id="SeasonTitleImage"/>
				<Label id="SeasonQuote" class="PlaceQuote" text="#DAC_PostGame_BP_Subheader"/>
			</Panel>
			<Label id="SeasonDesc" html="true" text="#DAC_PostGame_BP_Desc"/>
			<Panel id="SeasonProgressContainer">
				<Panel class="BrushBg" />
				<Panel class="ProgressBar">
					<ProgressBar value="0" max="1" id="SeasonLevelProgress" />
					<Panel id="LevelContainer">
						<Label id="SeasonLevelHeader" text="#DAC_BPLevelHeader"/>
						<Label id="SeasonLevelNum" class="Tier_Default_Bg" text="{i:current_season_level}"/>
					</Panel>
					<Panel id="LevelDescriptionContainer">
						<Label id="LevelPointCounts" text="#DAC_PostGame_LevelPointCount"/>
						<Label id="NextRewardDesc" text="#DAC_PostGame_NextLevelReward"/>
					</Panel>
					<Panel id="NextRewardContainer">
						<Panel id="NextRewardImageContainer">
							<Panel id="NextRewardBg" />
							<Panel id="NextRewardImage" />
						</Panel>
					</Panel>
				</Panel>
			</Panel>
		</Panel>

		<Panel class="ButtonContainer">
			<Button id="ReturnToGameButton" class="GlassButton" onactivate="DACPostGameReturnToGame()">
				<Label class="" text="#DAC_InGame_KeepWatching" />
			</Button>

			<Button class="GlassButton" id="ScoreboardButton" onactivate="DACPostGameShowScoreboardPage()">
				<Label class="" text="#DAC_PostGame_Scoreboard" />
			</Button>

			<Button class="GlassButton" id="StatsButton" onactivate="DACPostGameShowStatsPage()">
				<Label class="" text="#DAC_PostGame_Stats" />
			</Button>

			<Button class="GlassButton" id="MainMenuButton" onactivate="DACPostGameMainMenu()">
				<Label class="" text="#DAC_InGame_ReturnToMainMenu" />
			</Button>
		</Panel>
		
	</DACPagePostGame>

</root>