<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/dac_global.vcss_c" />
		<include src="s2r://panorama/styles/dac_ui_turbo_shop.vcss_c" />
	</styles>

	<snippets>
		<snippet name="Offering">
			<Panel class="Offering">
				<Panel class="TopRowHeroes">
					<Panel class="OfferingHeroGeneric" id="OfferingHeroGeneric" />
					<Panel class="OfferingHeroGeneric" id="OfferingHeroGeneric1" />
					<Panel class="OfferingHeroGeneric" id="OfferingHeroGeneric2" />
				</Panel>

				<Panel class="BottomRowHeroes">
					<Panel id="OfferingHeroContainer1" >
						<Panel id="OfferingHero1" class="OfferingHero" />
						<Panel class="OfferingHeroBorder" />
					</Panel>
					<Panel id="OfferingHeroContainer2" >
						<Panel id="OfferingHero2" class="OfferingHero"/>
						<Panel class="OfferingHeroBorder" />
					</Panel>
				</Panel>

				<DACSynergyCapsule id="SynergyCapsule" keyword1="1" keyword2="3" />

				<Label id="Synergy1Tip" class="SynergyTip" text="{s:synergy_tip_0}" html="true"/>
				<Label id="Synergy2Tip" class="SynergyTip" text="{s:synergy_tip_1}" html="true"/>
			</Panel>
		</snippet>
	</snippets>

	<DACUITurboShop hittest="true">
	
		<Panel id="DACUITurboShopContainer" hittest="true">
			<Label class="Title" text="#dac_turbo_shop_title" />

			<Panel id="OfferingContainer">
				
			</Panel>

			<Button class="MulliganButton" onactivate="DACTurboShopMulligan()">
				<Label text="#dac_turbo_shop_mulligan" id="TurboRerollButton" />
			</Button>
		</Panel>
	
	</DACUITurboShop>

</root>