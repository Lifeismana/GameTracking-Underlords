<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/dac_global.vcss_c" />
		<include src="s2r://panorama/styles/dac_ui_round_start.vcss_c" />
	</styles>
	<DACRoundStart hittest="false" hittestchildren="false">
		<Panel class="NextRound_BG">
			<DACBannerPaintin 
				id="RoundStartAnimation" 
				headline="#DAC_NextRoundStarting" 
				subhead="{s:NeutralRoundName}" 
			/>
			<Panel class="NextRound_GoldInfo">
				<Panel class="NextRound_GoldInfoBreakdown">
					<Label class="BreakdownRoundGoldLabel BreakdownLabel" text="#DAC_GoldBreakdownRoundGold"/>
					<Label class="BreakdownInterestLabel BreakdownLabel" text="{s:interestlabel}"/>
					<Label class="BreakdownStreakLabel BreakdownLabel" text="{s:streaklabel}"/>
					<Label class="BreakdownItemsLabel BreakdownLabel" text="#DAC_GoldBreakdownItems"/>
					<Label class="BreakdownVictoryLabel BreakdownLabel" text="#DAC_GoldBreakdownVictory"/>
					<Label class="BreakdownFreeRerollLabel BreakdownLabel" text="#DAC_GoldBreakdownFreeReroll"/>
					<Panel class="LineBreak" />
					<Label id="BreakdownTotalGold" class="BreakdownLabel" text="#DAC_GoldBreakdownTotal"/>
				</Panel>
			</Panel>
		</Panel>		
	</DACRoundStart>
</root>
