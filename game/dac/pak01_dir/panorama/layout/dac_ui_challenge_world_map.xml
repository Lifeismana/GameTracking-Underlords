<root>

	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/dac_global.vcss_c" />
		<include src="s2r://panorama/styles/dac_ui_challenge_world_map.vcss_c" />
	</styles>

	<DACChallengeMap hittest="true">
		<DACScenePanel id="Scene" map="ui/citycrawl/bp1_city_crawl_map" camera="cam_default" antialias="true" particleonly="false" orthocam="false" rendershadows="true" glowsize="0" squarepixels="true" />

		<Panel class="BorderContainer" hittest="false" hittestchildren="false">
			<Panel class="Vertical Left" />
			<Panel class="Vertical Right" />
			<Panel class="Horizontal Top" />
			<Panel class="Horizontal Bottom" />
			<Panel class="Corner Top Left" />
			<Panel class="Corner Top Right" />
			<Panel class="Corner Bottom Left" />
			<Panel class="Corner Bottom Right" />
		</Panel>
		
		<!-- renderdeferred="true" -->

		<Panel class="RegionButtonContainer">
			<Panel class="RegionButton Region3" onactivate="DACChallengeWorldMapCamera(3);" >
				<Panel class="RegionImage" />
				<Label class="RegionTitle" text="#dac_region_3_title" />
				<Label class="RegionProgress TextSubTitle" text="#dac_challenge_map_progress_3" />
				<Label class="ActiveRegionLabel ActiveRegion3" text="#dac_challenge_map_active_region" />
			</Panel>

			<Panel class="RegionButton Region2" onactivate="DACChallengeWorldMapCamera(2);">
				<Panel class="RegionImage" />
				<Label class="RegionTitle" text="#dac_region_2_title" />
				<Label class="RegionProgress TextSubTitle" text="#dac_challenge_map_progress_2" />
				<Label class="ActiveRegionLabel ActiveRegion2" text="#dac_challenge_map_active_region" />
			</Panel>

			<Panel class="RegionButton Region4" onactivate="DACChallengeWorldMapCamera(4);">
				<Panel class="RegionImage" />
				<Label class="RegionTitle" text="#dac_region_4_title" />
				<Label class="RegionProgress TextSubTitle" text="#dac_challenge_map_progress_4" />
				<Label class="ActiveRegionLabel ActiveRegion4" text="#dac_challenge_map_active_region" />
			</Panel>

			<Panel class="RegionButton Region1" onactivate="DACChallengeWorldMapCamera(1);">
				<Panel class="RegionImage" />
				<Label class="RegionTitle" text="#dac_region_1_title" />
				<Label class="RegionProgress TextSubTitle" text="#dac_challenge_map_progress_1" />
				<Label class="ActiveRegionLabel ActiveRegion1 TextSmallHeader" text="#dac_challenge_map_active_region" />
			</Panel>
		</Panel>

		<Panel class="DevButtonContainer">
			<Button class="SimpleButton OverviewButton" onactivate="DACChallengeWorldMapCamera(0)">
				<Label text="#dac_challenge_map_dev_area_0" />
			</Button>

			<Button class="SimpleButton ClaimModeButton" onactivate="DACChallengeWorldMapToggleClaimMode()">
				<Label text="#dac_challenge_map_toggle_claim_mode" />
			</Button>

			<Button class="SimpleButton" onactivate="DACChallengeWorldMapDevBuildings()">
				<Label text="#dac_challenge_map_dev_buildings" />
			</Button>
		</Panel>

		<Panel class="HeaderLabels">
			<Label class="CrawlTitle" text="#dac_challenge_map_title" />
			<Label class="RegionTitleHeader" text="{s:active_region_name}" />
		</Panel>

		<Panel class="UnderlordPortrait1 UnderlordPortrait" />
		<Panel class="UnderlordPortrait2 UnderlordPortrait" />
		<Panel class="UnderlordPortrait3 UnderlordPortrait" />
		<Panel class="UnderlordPortrait4 UnderlordPortrait" />

		<Panel class="AreaLabels">
			<Label class="AreaChallengeCount" text="#dac_challenge_map_challenge_count" />
		</Panel>

		<Panel id="ClaimTooltipDest" class="TooltipDest" acceptsinput="false" />
		<Panel id="ChallengeTooltipDest" class="TooltipDest" acceptsinput="false" />

		<Panel class="Legend">
			<Panel class="LegendToggle" onactivate="DACChallengeMapToggleLegend()">
				<Label class="LeftArrow ArrowUp" text="#dac_challenge_map_legend_up_arrow" />
				<Label class="LeftArrow ArrowDown" text="#dac_challenge_map_legend_down_arrow" />
				<Label class="LegendTitle" text="#dac_challenge_map_legend_title" />
				<Label class="RightArrow ArrowUp" text="#dac_challenge_map_legend_up_arrow" />
				<Label class="RightArrow ArrowDown" text="#dac_challenge_map_legend_down_arrow" />
			</Panel>
			<Panel class="LegendContents">
				<Panel class="LegendItems">
					<Label text="#dac_challenge_map_legend_challenges" />
					<Label text="#dac_challenge_map_legend_location" />
					<Label text="#dac_challenge_map_legend_premium_location" />
					<Label text="#dac_challenge_map_legend_reward" />
					<Label text="#dac_challenge_map_legend_premium_reward" />
				</Panel>
				<Label class="LegendSubtitle" text="#dac_challenge_map_legend_subtitle" />
			</Panel>

		</Panel>

	</DACChallengeMap>
</root>