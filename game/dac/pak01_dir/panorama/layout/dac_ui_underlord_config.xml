<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/dac_global.vcss_c" />
		<include src="s2r://panorama/styles/dac_ui_hud.vcss_c" />
		<include src="s2r://panorama/styles/dac_ui_underlord_config.vcss_c" />
	</styles>

	<DACUnderlordConfig>

    <Panel id="UnderlordContainer">
      <Panel class="BioSection">
        <Label id="Name"/>
        <Label id="Subtitle"/>
        <Label id="DescriptionHeader"/>
        <Label id="Description"/>
      </Panel>

      <DACUnderlordConfigLevelProgress class="LevelProgress"/>

      <Button class="SelectButton" onactivate="DACUnderlordActivate()">
        <Label text="#DAC_Underlord_Select"/>
      </Button>

      <Panel class="SelectedUnderlordPanel">
        <Label text="#DAC_Underlord_Selected"/>
      </Panel>
      
      <Image id="Portrait" scaling="stretch-to-fit-preserve-aspect"/>
    </Panel>

    <Button id="Previous" class="NavigationButton" onactivate="DACUnderlordsViewChange(-1)">
      <Label id="PreviousUnderlord"/>"
      <Panel class="Arrow Left"/>
    </Button>

    <Button id="Next" class="NavigationButton" onactivate="DACUnderlordsViewChange(1)">
      <Label id="NextUnderlord"/>"
      <Panel class="Arrow Right"/>
    </Button>

  </DACUnderlordConfig>

</root>
