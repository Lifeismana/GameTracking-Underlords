<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/dac_db_control_citycrawl.vcss_c" />
	</styles>

	<DACControlCityCrawl>
		<Panel class="DistrictsContainer">
			<Panel class="Quadrant Upper Left">
				<Panel class="Background"/>
				<Panel id="District3" class="Foreground"/>
			</Panel>
			<Panel class="Quadrant Upper Right">
				<Panel class="Background"/>
				<Panel id="District1" class="Foreground"/>
			</Panel>
			<Panel class="Quadrant Lower Left">
				<Panel class="Background"/>
				<Panel id="District2" class="Foreground"/>
			</Panel>
			<Panel class="Quadrant Lower Right">
				<Panel class="Background"/>
				<Panel id="District4" class="Foreground"/>
			</Panel>
			<Panel class="CenterCircle"/>
		</Panel>
		<Panel class="NumbersContainer">
			<Label class="Title" text="#DAC_ChallengeWorldMapPage"/>
			<Label class="Results HeadlineFont" text="{i:district_progress} / {i:district_total}"/>
		</Panel>
	</DACControlCityCrawl>
</root>
