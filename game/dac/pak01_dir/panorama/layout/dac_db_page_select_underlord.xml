<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/dac_global.vcss_c" />
		<include src="s2r://panorama/styles/dac_db_page_select_underlord.vcss_c" />
	</styles>

	<snippets>
		<snippet name="UnderlordItem">
			<Panel class="UnderlordItem">
				<DACUnderlordScenePanel id="UnderlordScenePanel" forcehighlod="true" map="scenes/shop" renderdeferred="false" cleardepth="true" usePortraitData="true" fov="50" cameraUp="155" cameraLeft="10" cameraDistance="120" glowsize="0" squarepixels="true" />
				<Label class="UnderlordName" text="{s:UnderlordName}" />
			</Panel>

		</snippet>
	</snippets>

	<DACPlayPage hittest="false" class="DashboardPage">

		<Panel id="Background">
			
		</Panel>
		<Panel id="ForegroundContainer">
			<Panel id="UnderlordSelectorContainer">
				
			</Panel>
		</Panel>
		<Panel class="DashboardHeader">
			<Panel id="BackButton2" onactivate="DACSelectDashboardButton('PlayContainer'); DACShowHomePage(); PlaySoundEffect( 'DAC_UI.MainMenu_GameActivate' );" />
		</Panel>
	</DACPlayPage>
</root>