<root>
	<styles>
		<include src="s2r://panorama/styles/dac_global.vcss_c" />
		<include src="s2r://panorama/styles/tooltips/tooltip_challengemap_claim.vcss_c" />
	</styles>

	<DACTooltipChallengeMapClaim class="ChallengeMapClaimContents">
		<Panel class="Header">
			<Label class="ClaimTitle TextSubTitle" text="#dac_challenge_map_claim_100_name" />
			<Label class="ClaimLockedBadge TextSubTitle" text="#dac_challenge_map_claim_locked" />
			<Label class="ClaimBlockedBadge TextSubTitle" text="#dac_challenge_map_claim_blocked" />
		</Panel>
		<Panel class="Body">
			
			<Label class="ClaimDescription" text="{s:claim_description}" />

			<Label class="ClaimRewardTextTitle" text="#dac_challenge_map_claim_locked_reward" />

			<Panel class="ClaimRewardContainer">
				<Panel id="ClaimRewardImage" />
				<Panel class="ClaimLockedTextContainer">
					<Label class="ClaimRewardName" text="{s:claim_reward_name}" />
				</Panel>
			</Panel>

			<Label class="ClaimRewardXP" text="#dac_challenge_map_claim_xp" />

			<Panel id="ClaimLocationImage" />

		</Panel>
	</DACTooltipChallengeMapClaim>
</root>
