<root>
	<styles>
		<include src="s2r://panorama/styles/tooltips/tooltip_meter_details.vcss_c" />
		<include src="s2r://panorama/styles/dac_global.vcss_c" />
	</styles>

	<snippets>
		<snippet name="DetailSnippet">
			<Panel class="Detail">
				<Image id="Image" scaling="stretch-to-fit-preserve-aspect"/>
				<Panel class="LeftRightFlow">
					<Label id="Name" text="{s:name}"/>
					<Label id="Dash" text="-"/>
					<Label id="SubName" text="{s:subname}"/>
				</Panel>
				<Label id="Value" text="{s:value}"/>
			</Panel>
		</snippet>
	</snippets>

	<DACTooltipMeterDetails class="MeterDetail">
		<Panel id="DetailList">
			<!-- filled with DetailSnippet -->
		</Panel>
	</DACTooltipMeterDetails>
</root>
