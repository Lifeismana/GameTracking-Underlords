<root>
	<styles>
		<include src="s2r://panorama/styles/tooltips/tooltip_meter_details.vcss_c" />
		<include src="s2r://panorama/styles/dac_global.vcss_c" />
	</styles>

	<snippets>
		<snippet name="AbilitySnippet">
			<Panel class="Ability">
				<Image id="AbilityImage" scaling="stretch-to-fit-preserve-aspect"/>
				<Label id="AbilityName" text="{s:ability_name}"/>
				<Label id="Value" text="{i:value}"/>
			</Panel>
		</snippet>
	</snippets>

	<DACTooltipMeterDetails class="MeterDetail">
		<Panel id="AbilityList">
			<!-- filled with AbilitySnippet -->
		</Panel>
	</DACTooltipMeterDetails>
</root>
