<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/tooltips/tooltip_item.vcss_c" />
	</styles>

	<DACTooltipItem class="ItemContents">
		<Panel class="Header">
			<!-- <Panel id="ItemIcon" /> -->
			<Panel class="HeaderTextContainer">

				<Panel class="ItemTypeIcon" />

				<Panel class="HeaderTitleContainer">
					<Label class="HeaderText" text="{s:item_name} {s:rank}" />
					<Panel class="TypeContainer">
						<Label class="TierText" text="#DAC_InGame_ItemTier" />
						<Label class="ItemTypeLabelDivider" text="-" />
						<Label class="ItemTypeLabel" text="{s:item_type}" />
					</Panel>
				</Panel>

			</Panel>
		</Panel>
		<Panel class="Body">

			<Label class="BodyText" text="{s:item_description}" html="true"/>
			<Label id="Desc1Text" class="BodyText BodyDesc" text="#dac_item_description1" html="true"/>
			<Label id="Desc2Text" class="BodyText BodyDesc" text="#dac_item_description2" html="true"/>
			<Label id="Desc3Text" class="BodyText BodyDesc" text="#dac_item_description3" html="true"/>
			<Label class="LoreText" html="true" text="{s:item_lore}" />
		</Panel>

	</DACTooltipItem>
</root>
