<root>
	<styles>
		<include src="s2r://panorama/styles/tooltips/tooltip_underlord_ability.vcss_c" />
		<include src="s2r://panorama/styles/dac_global.vcss_c" />
	</styles>

	<snippets>
		<snippet name="TalentSnippet">
			<Panel class="Talent">
				<Image id="TalentImage" scaling="stretch-to-fit-preserve-aspect"/>
				<Panel class="RightSide">
					<Label class="TalentName" text="{s:talent_name}"/>
					<Label class="TalentDescription" text="{s:talent_description}" html="true"/>
					<Label class="TalentLevel" text="#dac_talent_lv_level"/>
				</Panel>
			</Panel>
		</snippet>
	</snippets>

	<DACTooltipUnderlordAbility class="UnderlordAbilityOptions">
		<Panel id="Header">
			<Label text="#dac_talent_ultimate_description"/>
		</Panel>
		<Panel id="Body">
			<Panel id="Ability1" class="AbilityOption">
				<Panel class="AbilitySection">
					<Label class="AbilityName" text="{s:ability_name}"/>
					<Label class="AbilityDescription" text="{s:ability_description}" html="true"/>
					<Panel class="BottomRow">
						<Label class="AbilityHype" id="HypeLabel" text="#dac_talent_hype"/>
						<Label id="ScalesWithUnderlord" text="#dac_ability_underlord_scales"/>
					</Panel>
				</Panel>
				<Panel id="TalentSection">
					<!-- Filled with TalentSnippets -->
				</Panel>
			</Panel>
			<Panel class="OrSection">
				<Panel class="VerticalSeparator"/>
				<Label id="or" text="#or"/>
				<Panel class="VerticalSeparator"/>
			</Panel>
			<Panel id="Ability2" class="AbilityOption">
				<Panel class="AbilitySection">
					<Label class="AbilityName" text="{s:ability_name}"/>
					<Label class="AbilityDescription" text="{s:ability_description}" html="true"/>
					<Panel class="BottomRow">
						<Label class="AbilityHype" id="HypeLabel" text="#dac_talent_hype"/>
						<Label id="ScalesWithUnderlord" text="#dac_ability_underlord_scales"/>
					</Panel>
				</Panel>
				<Panel id="TalentSection">
					<!-- Filled with TalentSnippets -->
				</Panel>
			</Panel>
		</Panel>
	</DACTooltipUnderlordAbility>
</root>
