<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/dac_global.vcss_c" />
		<include src="s2r://panorama/styles/dac_ui_hud.vcss_c" />
		<include src="s2r://panorama/styles/dac_ui_puzzle_intro.vcss_c" />
	</styles>

	<DACUIPuzzleIntro>
		<Panel class="Content">
			<Panel class="LeftColumn Column">
				<Panel class="Header">
					<Label class="PuzzleTitle" text="{s:title}" />
					<Label class="PuzzleDifficulty" text="{s:difficulty}" />
				</Panel>
				<Panel id="PuzzleImage" />
			</Panel>
			<Panel class="RightColumn Column">
				<!-- <Button class="CloseButton" onactivate="" /> -->
				<Label class="PuzzleDescription" text="{s:description}" />
				<DACUIPuzzleRules />
				<Button class="ContinueButton" onactivate="DACPuzzleIntroBegin()">
					<Label text="#DAC_Challenge_Puzzle_Intro_Continue" />
				</Button>
			</Panel>
		</Panel>
	
	</DACUIPuzzleIntro>

</root>