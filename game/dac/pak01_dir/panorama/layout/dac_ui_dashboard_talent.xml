		<include src="s2r://panorama/styles/dac_ui_underlord.vcss_c" />
	</styles>\
  
  <DACUnderlordDashboardTalent>
    <Panel id="ImageContainer" hittest="false" hittestchildren="false">
      <Image id="TalentImage"/>
