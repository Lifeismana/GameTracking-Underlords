<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/dac_global.vcss_c" />
		<include src="s2r://panorama/styles/dac_world_debug.vcss_c" />
	</styles>

	<snippets>
		<snippet name="BoardCell">
			<!-- These is positioned/sized absolutely by code. -->
			<Panel class="BoardCell">
				<Panel class="BoardCellBorder">
					<Panel class="Inner" />
				</Panel>
				<Panel id="OwnerName">
					<!-- Created in code -->
				</Panel>
			</Panel>
		</snippet>
		<snippet name="BoardPathNode">
			<!-- These is positioned/sized absolutely by code. -->
			<Panel class="BoardPathNode">
				<Label text="{d:waypoint_index}" />
			</Panel>
		</snippet>
	</snippets>
	
	<DACWorldDebug>
		<Panel id="BoardCellContainer" />
		<Panel id="BoardPathContainer" />
		<Panel id="BoardCommonContainer">
			<Panel class="DebugText">
				<Label text="Combat: " />
				<Label class="Mirrored" text="[Mirrored]" />
				<Label class="NotMirrored" text="[Not Mirrored]" />
			</Panel>
		</Panel>
	</DACWorldDebug>

</root>