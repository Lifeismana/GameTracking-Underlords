<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/dac_global.vcss_c" />
		<include src="s2r://panorama/styles/dac_ui_underlord_picker.vcss_c" />
	</styles>

	<snippets>
		<snippet name="AbilitySnippet">
			<Panel class="AbilityBlock">
				<Image id="AbilityIcon" scaling="stretch-to-cover-preserve-aspect" />
				<Panel class="AbilityInfo">
					<Label class="UnderlordBuildName" text="{s:build_title}" />
					<Label class="AbilityName" text="{s:ability_name}" />
					<Label class="AbilityDesc" text="{s:ability_description}" html="true" />
				</Panel>
			</Panel>
		</snippet>
	</snippets>

	<DACUIUnderlordPicker hittest="true">
	
		<Panel id="MainContainer" hittest="true">
			<Label class="SelectUnderlordTitle" text="#dac_underlord_picker_title" />

			<Panel id="UnderlordPhaseContainer">
				<Panel id="UnderlordSelectButton0" class="UnderlordSelectButton"  onactivate="DACSelectUnderlord(0);" onmouseover="PlaySoundEffect('DAC_UI.UnderlordPicker_Rollover')">
					<DACUnderlordScenePanel id="UnderlordScenePanel0" class="UnderlordPortrait" forcehighlod="true" map="scenes/shop" renderdeferred="false" cleardepth="true" usePortraitData="true" fov="50" cameraUp="155" cameraLeft="10" cameraDistance="120" glowsize="0" hittest="false"/>
					<Panel id="UnderlordDetails">
						<Panel class="UnderlordIcon" />
						<Label class="UnderlordName" text="{s:underlord_0_name}"/>
						<Label class="UnderlordDesc" text="{s:underlord_0_title}"/>
						<Panel id="AbilityContainer0" />
					</Panel>
					
				</Panel>
				<Panel id="UnderlordSelectButton1" class="UnderlordSelectButton"  onactivate="DACSelectUnderlord(1);" onmouseover="PlaySoundEffect('DAC_UI.UnderlordPicker_Rollover')">
					<DACUnderlordScenePanel id="UnderlordScenePanel1" class="UnderlordPortrait" forcehighlod="true" map="scenes/shop" renderdeferred="false" cleardepth="true" usePortraitData="true" fov="50" cameraUp="155" cameraLeft="10" cameraDistance="120" glowsize="0" hittest="false"/>
					<Panel id="UnderlordDetails">
						<Panel class="UnderlordIcon" />
						<Label class="UnderlordName" text="{s:underlord_1_name}"/>
						<Label class="UnderlordDesc" text="{s:underlord_1_title}"/>
						<Panel id="AbilityContainer1" />
					</Panel>
				</Panel>
				<Panel id="UnderlordSelectButton2" class="UnderlordSelectButton"  onactivate="DACSelectUnderlord(2);" onmouseover="PlaySoundEffect('DAC_UI.UnderlordPicker_Rollover')">
					<DACUnderlordScenePanel id="UnderlordScenePanel2" class="UnderlordPortrait" forcehighlod="true" map="scenes/shop" renderdeferred="false" cleardepth="true" usePortraitData="true" fov="50" cameraUp="155" cameraLeft="10" cameraDistance="120" glowsize="0" hittest="false"/>
					<Panel id="UnderlordDetails">
						<Panel class="UnderlordIcon" />
						<Label class="UnderlordName" text="{s:underlord_2_name}"/>
						<Label class="UnderlordDesc" text="{s:underlord_2_title}"/>
						<Panel id="AbilityContainer2" />
					</Panel>
				</Panel>
				<Panel id="UnderlordSelectButton3" class="UnderlordSelectButton"  onactivate="DACSelectUnderlord(3);" onmouseover="PlaySoundEffect('DAC_UI.UnderlordPicker_Rollover')">
					<DACUnderlordScenePanel id="UnderlordScenePanel3" class="UnderlordPortrait" forcehighlod="true" map="scenes/shop" renderdeferred="false" cleardepth="true" usePortraitData="true" fov="50" cameraUp="155" cameraLeft="10" cameraDistance="120" glowsize="0" hittest="false"/>
					<Panel id="UnderlordDetails">
						<Panel class="UnderlordIcon" />
						<Label class="UnderlordName" text="{s:underlord_3_name}"/>
						<Label class="UnderlordDesc" text="{s:underlord_3_title}"/>
						<Panel id="AbilityContainer3" />
					</Panel>
				</Panel>
			</Panel>
		</Panel>
	
	</DACUIUnderlordPicker>

</root>