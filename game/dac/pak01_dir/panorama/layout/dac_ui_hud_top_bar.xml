<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/dac_global.vcss_c" />
		<include src="s2r://panorama/styles/dac_db_control_battlepass.vcss_c" />
		<include src="s2r://panorama/styles/dac_ui_hud_top_bar.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_generic.vcss_c" />
	</styles>

	<DACUIHudTopBar hittest="false" acceptsfocus="false">

		<Panel id="TimerContainer">
				<Panel id="TimerBar" />
		</Panel>

		<Panel class="GameStatePanelClock">
			<Panel class="GameStateTimer LeftRightFlow">
				<Panel id="HeaderRoundTimeContainer">
					<Label class="HeaderRoundTime" id="TimeRemaining" text="{i:gameStateTimeLeft}" />
				</Panel>
			</Panel>
		</Panel>		

		<Panel id="RoundHeaderContainer">
			
			<Label id="RoundPhase" class="RoundPhaseText" text="#DAC_InGame_RoundPhase" />
			<Label id="NextRoundLabel" class="RoundPhaseText" text="#DAC_InGame_NextRoundStarts" />

			<Label id="RoundNum" class="RoundPhaseText" text="#DAC_InGame_Round"/>
		</Panel>

		<Label id="RoundHeaderPauseIndicator" text="#DAC_GamePaused" />	
	</DACUIHudTopBar>
</root>
