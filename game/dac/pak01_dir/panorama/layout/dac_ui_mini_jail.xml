<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/dac_global.vcss_c" />
		<include src="s2r://panorama/styles/dac_ui_mini_jail.vcss_c" />
	</styles>
	<snippets>
		<snippet name="JailUnit">
			<Panel class="JailUnitContainer">
				<Image id="JailUnitIcon"/>
			</Panel>
		</snippet>
	</snippets>

	<DACMiniJail>
		<Panel id="MainContainer" hittest="true" onactivate="DACShowBannedHeroes(); PlaySoundEffect( 'DAC_UI.InGame_SettingsActivate' )">
			<Panel id="Header">
				<Panel id="BanIcon"/>
				<Label id="TitleText" text="#DAC_MiniJail_Title"/>
			</Panel>
			
			<Panel id="UnitIconContainer"/>

			<Countdown id="ReleaseFromJail">
				<Label class="Description MonoFont" text="{t:t:m:d:dac_time_left_before_jail_reset}"/>
			</Countdown>
		</Panel>
	</DACMiniJail>
</root>