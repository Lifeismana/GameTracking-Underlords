<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_generic.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_about_duos.vcss_c" />
	</styles>

	<PopupAboutDuos class="PopupPanel" popupbackground="blur">
		<Panel id="Contents" class="TopBottomFlow PopupPanel">
			<Label class="Title" text="#DAC_SelectMatchType_AboutDuos_Title" />
			<Label class="SubTitle" text="#DAC_SelectMatchType_AboutDuos_SubTitle" />
			<Panel class="Body">
				<Panel class="TextBlock Block1">
					<Panel class="BlockImage BlockImage1" />
					<Label class="BlockTitle" text="#DAC_BlockTitle_1" />
					<Label class="BlockDesc" text="#DAC_BlockDesc_1" />
				</Panel>
				<Panel class="TextBlock Block2">
					<Panel class="BlockImage BlockImage2" />
					<Label class="BlockTitle" text="#DAC_BlockTitle_2" />
					<Label class="BlockDesc" text="#DAC_BlockDesc_2" />
				</Panel>
				<Panel class="TextBlock Block3">
					<Panel class="BlockImage BlockImage3" />
					<Label class="BlockTitle" text="#DAC_BlockTitle_3" />
					<Label class="BlockDesc" text="#DAC_BlockDesc_3" />
				</Panel>
			</Panel>
			<Button id="ContinueButton" class="SimpleButton ModeSelectCancelButton" onactivate="UIPopupButtonClicked(); PlaySoundEffect( 'DAC_UI.PlayMenu_Cancel' );">
				<Label text="#OK"/>
			</Button>
		</Panel>
	</PopupAboutDuos>
</root>
