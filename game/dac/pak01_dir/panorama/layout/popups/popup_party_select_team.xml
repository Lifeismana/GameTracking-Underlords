<root>
  <styles>
    <include src="s2r://panorama/styles/gamestyles.vcss_c" />
    <include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
    <include src="s2r://panorama/styles/popups/popup_generic.vcss_c" />
    <include src="s2r://panorama/styles/popups/popup_party_select_team.vcss_c" />
  </styles>

  <Panel class="PopupPanel Hidden" popupbackground="dim">
    <Label text="#DAC_PartySelectTeam_Title" class="TextHeader"/>

    <Panel class="TeamGroup">
      <Panel class="TeamRow">
        <Panel id="Team1" class="TeamButton" onactivate="DACPartySelectTeamPopup(1)"/>
        <Panel id="Team2" class="TeamButton" onactivate="DACPartySelectTeamPopup(2)"/>
        <Panel id="Team3" class="TeamButton" onactivate="DACPartySelectTeamPopup(3)"/>
        <Panel id="Team4" class="TeamButton" onactivate="DACPartySelectTeamPopup(4)"/>
      </Panel>
      <Panel class="TeamRow">
        <Panel id="Team5" class="TeamButton" onactivate="DACPartySelectTeamPopup(5)"/>
        <Panel id="Team6" class="TeamButton" onactivate="DACPartySelectTeamPopup(6)"/>
        <Panel id="Team7" class="TeamButton" onactivate="DACPartySelectTeamPopup(7)"/>
        <Panel id="Team8" class="TeamButton" onactivate="DACPartySelectTeamPopup(8)"/>
      </Panel>      
    </Panel>
    
    <Panel class="PopupButtonRow">
      <Button class="PopupButton" onactivate="DACPartySelectTeamPopup(0)">
        <Label text="#DAC_PartySelectTeam_None" />
      </Button>
      <Button class="PopupButton" onactivate="UIPopupButtonClicked()">
        <Label text="#Cancel" />
      </Button>
    </Panel>

  </Panel>
</root>
