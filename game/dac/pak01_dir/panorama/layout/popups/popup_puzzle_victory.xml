<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_generic.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_puzzle_victory.vcss_c" />
	</styles>

	<Panel class="PopupPuzzleVictory" popupbackground="dim" onactivate="DACPuzzleVictoryReturnToCrawl(); UIPopupButtonClicked();">

		<Panel id="PlaceContainer">
			<Panel id="PlaceAccents"/>
			<Panel id="PlaceText">
				<Label id="PlaceTitle" text="#DAC_PuzzleVictory_Title" html="true"/>
				<Label id="PlaceSubtitle" text="#DAC_PuzzleVictory_Subtitle" html="true"/>
			</Panel>
		</Panel>

		<Button id="ReturnToCityCrawl" class="LowerNavButton ReturnToCityCrawlExit" onactivate="DACPuzzleVictoryReturnToCrawl(); UIPopupButtonClicked();">
			<Label text="#DAC_Puzzle_Exit" class="ReturnToCityCrawlExit"/>
		</Button>

		<Button id="ReturnToCityCrawl" class="LowerNavButton ReturnToMainMenuExit" onactivate="DACPuzzleVictoryReturnToDashboard(); UIPopupButtonClicked();">
			<Label text="#DAC_Home_ReturnToMenu" class="ReturnToMainMenuExit"/>			
		</Button>
	</Panel>
</root>
