<root>
  <styles>
    <include src="s2r://panorama/styles/gamestyles.vcss_c" />
    <include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
    <include src="s2r://panorama/styles/popups/popup_generic.vcss_c" />
    <include src="s2r://panorama/styles/popups/popup_reward.vcss_c" />
  </styles>

  <PopupReward>
		<Panel id="Overlay" />
		<DACParticleScenePanel id="RewardFX" hittest="false" startActive="true" cameraLeft="0" cameraUp="0" particleName="econ/s0/particles/battlepass/s0_battlepass_reward_page.vpcf" fov="150" />						
				
		<Button id="ContinueButton" class="PopupButton" onactivate="UIPopupButtonClicked()"/>

		<Panel id="RewardContainer">
			
			<Panel class="TitleContainer">
				<Label class="Title MajorTitle" id="RewardMajorTitle"  text="#DAC_Reward_Title_Major" />
				<Panel id="MinorTitleRow" >
					<Panel id="BPLogo" />
					<Label class="Title MinorTitle" id="RewardMinorTitle"  text="#DAC_Reward_Title_Minor" />
				</Panel>
			</Panel>

			<Panel class="ItemContainer">
				<Panel id="ItemImage" />
			</Panel>
			
			<Panel id="RewardTextContainer">
				<Label class="RewardText RewardTextName" html="true"  text="#DAC_Reward_Item_Name" />
				<Label class="RewardText RewardTextDesc" html="true"  text="#DAC_Reward_Item_Desc" />
			</Panel>

      <Button id="EquipButton" class="CloseButton">
        <Label class="EquipLabel" text="#DAC_LoadoutEquip" onactivate="DACPopupRewardEquip()"/>
      </Button>     
			
		</Panel>


  </PopupReward>
</root>
