<root>
	<styles>
		<include src="s2r://panorama/styles/dac_global.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/dac_ui_popup_citycrawl_intro.vcss_c" />
	</styles>

	<PopupCityCrawlIntro class="PopupPanel" popupbackground="blur" acceptsinput="true">

		<Panel class="Body">
						
			<Button class="CloseButton" onactivate="UIPopupButtonClicked()" />
			<Panel class="UnderlordImg Anessix" />
			<Panel class="UnderlordImg Hobgen" />
			<Panel class="ModalContent">
				<Label class="CCIntro" html="true" text="#DAC_CC_Intro_Title" />
				<Label class="CCDesc" text="#DAC_CC_Intro_Desc" />
				<Label class="CCDescSkins" text="#DAC_CC_Intro_Desc_Outfits" />

				<Label class="NodesLabel" text="#DAC_CC_Intro_Node_Label" />
				<Panel id="NodeTypes">
					<Panel class="Node">
						<Panel class="NodeImg ObjectiveNode" />
						<Label class="NodeTitle" text="#DAC_CC_Intro_Objective_Title" />
						<Label class="NodeDesc" text="#DAC_CC_Intro_Objective_Desc" />
					</Panel>

					<Panel class="Node">
						<Panel class="NodeImg PuzzleNode" />
						<Label class="NodeTitle" text="#DAC_CC_Intro_Puzzle_Title" />
						<Label class="NodeDesc" text="#DAC_CC_Intro_Puzzle_Desc" />
					</Panel>

					<Panel class="Node">
						<Panel class="NodeImg StreetFightNode" />
						<Label class="NodeTitle" text="#DAC_CC_Intro_StreetFight_Title" />
						<Label class="NodeDesc" text="#DAC_CC_Intro_StreetFight_Desc" />
					</Panel>

					<Panel class="Node">
						<Panel class="NodeImg BattlePassNode" />
						<Label class="NodeTitle" text="#DAC_CC_Intro_BattlePass_Title" />
						<Label class="NodeDesc" text="#DAC_CC_Intro_BattlePass_Desc" />
					</Panel>
				</Panel>

				<Button class="MulliganButton CloseModalButton" onactivate="UIPopupButtonClicked()">
						<Label text="#DAC_PartyInviteFriend_Close" />
				</Button>
			</Panel>
			

		</Panel>

	</PopupCityCrawlIntro>
</root>
