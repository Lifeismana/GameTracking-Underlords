<root>
	<styles>
    <include src="s2r://panorama/styles/gamestyles.vcss_c" />
    <include src="s2r://panorama/styles/dac_global.vcss_c" />
    <include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
    <include src="s2r://panorama/styles/popups/popup_generic.vcss_c" />
    <include src="s2r://panorama/styles/popups/popup_underlord_picker.vcss_c" />
  </styles>

    <Panel class="PopupPanel" popupbackground="dim">
      <Panel class="ButtonContainer">
        <Panel class="TutorialIntroButton"  onactivate="DACSetActiveUnderlord(1); UIPopupButtonClicked()">
          <DACUnderlordScenePanel underlordID="1" class="UnderlordPortrait" forcehighlod="true" map="scenes/shop" renderdeferred="false" cleardepth="true" usePortraitData="true" fov="50" cameraUp="155" cameraLeft="10" cameraDistance="120" glowsize="0" hittest="false"/>
          <Label class="PopupDesc" text="#DAC_Underlord_1"/>
          <Label class="PopupSubDesc" text="#DAC_Underlord_1_SubDesc"/>
        </Panel>
        <Panel class="TutorialIntroButton" onactivate="DACSetActiveUnderlord(4); UIPopupButtonClicked()">
          <DACUnderlordScenePanel underlordID="4" class="UnderlordPortrait" forcehighlod="true" map="scenes/shop" renderdeferred="false" cleardepth="true" usePortraitData="true" fov="50" cameraUp="155" cameraLeft="10" cameraDistance="120" glowsize="0" hittest="false"/>
          <Label class="PopupDesc" text="#DAC_Underlord_4" />
          <Label class="PopupSubDesc" text="#DAC_Underlord_4_SubDesc"/>
        </Panel>
      </Panel>
      <Panel id="TitleContainer">
	      <Label class="Title TextTitleAlt" text="#dac_pick_underlord_popup_title" />      
    	  <Label class="PreTitle" text="#dac_pick_underlord_popup_pre_title" />
	</Panel>      
  </Panel>
</root>
