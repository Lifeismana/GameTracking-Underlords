<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_synergy.vcss_c" />
	</styles>

	<DACSynergyPanel>
		<Panel class="Header">
			<DACSynergyIcon id="icon" iconstyle="circle" keyword="1" notooltip="1" />
			<Panel class="LeftRightFlow">
				<Label class="HeaderText" text="#DAC_UI_Popup_Synergy_Header" />
				<Label class="CountText" text="#DAC_UI_Popup_Synergy_UnitCount" />
			</Panel>
			<Panel class="CloseButton" />
		</Panel>
		<Panel class="Body">
			<Panel id="LevelRow1" class="LevelRow">
				<Label class="LevelNumber" text="{d:level_1_count}" />
				<Label class="LevelDescription" text="{s:level_1_desc}" />
			</Panel>
			<Panel id="LevelRow2" class="LevelRow">
				<Label class="LevelNumber" text="{d:level_2_count}" />
				<Label class="LevelDescription" text="{s:level_2_desc}" />
			</Panel>
			<Panel id="LevelRow3" class="LevelRow">
				<Label class="LevelNumber" text="{d:level_3_count}" />
				<Label class="LevelDescription" text="{s:level_3_desc}" />
			</Panel>
			<Label class="HasUnitLabel" text="#dac_synergy_popup_unit_on_board" />
			<Label class="HasUnitsLabel" text="#dac_synergy_popup_units_on_board" />
			<Label class="HasBenchUnitLabel" text="#dac_synergy_popup_unit_on_bench" />
			<Label class="HasBenchUnitsLabel" text="#dac_synergy_popup_units_on_bench" />
		</Panel>
	</DACSynergyPanel>
</root>
