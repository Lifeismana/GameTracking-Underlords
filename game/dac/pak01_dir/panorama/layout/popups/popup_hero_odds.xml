<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_generic.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_hero_odds.vcss_c" />
	</styles>

	<Panel class="PopupPanel Hidden" popupbackground="blur" onactivate="UIPopupButtonClicked( close )">

		<Button class="CloseButton" onactivate="UIPopupButtonClicked()" />

		<Panel class="Body">
			<Label class="HeroOddsHeader" text="#DAC_Hero_Odds_Header" />

			<Panel class="OddsContainer">
				<Panel class="CurrentLevelOdds">
					<Label class="CurrentOddsHeader" text="#DAC_Hero_Odds_Current_Level" />
					<Label class="HeroOddsLabel Tier1" text="#DAC_Hero_Odds_Tier1" />
					<Label class="HeroOddsLabel Tier2" text="#DAC_Hero_Odds_Tier2" />
					<Label class="HeroOddsLabel Tier3" text="#DAC_Hero_Odds_Tier3" />
					<Label class="HeroOddsLabel Tier4" text="#DAC_Hero_Odds_Tier4" />
					<Label class="HeroOddsLabel Tier5" text="#DAC_Hero_Odds_Tier5" />
				</Panel>

				<Panel class="NextLevelOdds">
					<Label class="NextOddsHeader" text="#DAC_Hero_Odds_Next_Level" />
					<Label class="HeroOddsLabel Tier1" text="#DAC_Hero_Odds_Tier1_Next" />
					<Label class="HeroOddsLabel Tier2" text="#DAC_Hero_Odds_Tier2_Next" />
					<Label class="HeroOddsLabel Tier3" text="#DAC_Hero_Odds_Tier3_Next" />
					<Label class="HeroOddsLabel Tier4" text="#DAC_Hero_Odds_Tier4_Next" />
					<Label class="HeroOddsLabel Tier5" text="#DAC_Hero_Odds_Tier5_Next" />
				</Panel>
			</Panel>
			<Label class="ExplainPoolLabel" text="#DAC_Explain_Hero_Pool" />
		</Panel>

	</Panel>
</root>
