<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/dac_global.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_generic.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_postgame_reward.vcss_c" />
	</styles>

	<Panel class="PopupPanel Hidden" popupbackground="blur" onactivate="DACPostGamePopupClaim()">

		<Panel class="Body">

			<Label class="HeaderText HeadlineFont" text="#DAC_Reward_Claim_Challenge_Title" />
			<Label id="RewardName" class="Description" text="You did a thing!" />


			<Button id="ClaimButton" >
				<Label id="ClaimText" text="Claim 0xp" html="true" />
				<DACParticleScenePanel class="DailyChallengeClaimFX" hittest="false" startActive="true" cameraLeft="0" cameraUp="0" particleName="econ/s0/particles/battlepass/s0_battlepass_claim_reward_rect_idle.vpcf" fov="200" />
				<DACParticleScenePanel id="ClaimActivateFX" class="DailyChallengeClaimFX" hittest="false" startActive="false" cameraLeft="0" cameraUp="0" particleName="econ/s0/particles/battlepass/s0_battlepass_claim_reward_rect.vpcf" fov="200" />
			</Button>


		</Panel>

	</Panel>
</root>
