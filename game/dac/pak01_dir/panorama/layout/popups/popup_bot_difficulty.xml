<root>
  <styles>
    <include src="s2r://panorama/styles/gamestyles.vcss_c" />
    <include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
    <include src="s2r://panorama/styles/popups/popup_generic.vcss_c" />
    <include src="s2r://panorama/styles/popups/popup_bot_difficulty.vcss_c" />
  </styles>

  <PopupBotDifficulty popupbackground="blur">
    <Panel class="Contents ">
			<Label class="TextTitle SoloMatchTitle" text="#DAC_BotDifficulty_Title" />
      <Label class="TextTitle PartyMatchTitle" text="#DAC_PartyBotDifficulty_Title" />
            <Label class="TextSubTitle BotDifficultySubTitle" text="#DAC_BotDifficulty_Desc" />

      <Panel id="DifficultyContainer">
        <Panel id="Easy" class="DifficultyPanel" onactivate="DACSetBotDifficulty(0); PlaySoundEffect('DAC_UI.PlayMenu_DifficultySelect')">
          <Panel class="BotImage"/>
          <Label class="TextSubTitle EasyLabel" text="#DAC_BotDifficultyName0"/>
          <Label class="TextBody" text="#DAC_BotDifficultyDesc0"/>
        </Panel>
        <Panel id="Medium" class="DifficultyPanel" onactivate="DACSetBotDifficulty(1); PlaySoundEffect('DAC_UI.PlayMenu_DifficultySelect')">
          <Panel class="BotImage"/>
          <Label class="TextSubTitle MediumLabel" text="#DAC_BotDifficultyName1"/>
          <Label class="TextBody" text="#DAC_BotDifficultyDesc1"/>
        </Panel>
        <Panel id="Hard" class="DifficultyPanel" onactivate="DACSetBotDifficulty(2); PlaySoundEffect('DAC_UI.PlayMenu_DifficultySelect')">
          <Panel class="BotImage"/>
          <Label class="TextSubTitle HardLabel" text="#DAC_BotDifficultyName2"/>
          <Label class="TextBody" text="#DAC_BotDifficultyDesc2"/>
        </Panel>
        <Panel id="Challenging" class="DifficultyPanel" onactivate="DACSetBotDifficulty(3); PlaySoundEffect('DAC_UI.PlayMenu_DifficultySelect')">
          <Panel class="BotImage"/>
          <Label class="TextSubTitle ChallengingLabel" text="#DAC_BotDifficultyName3"/>
          <Label class="TextBody" text="#DAC_BotDifficultyDesc3"/>
        </Panel>
		
		        
		<Panel id="Separator" class="Line">
		 <Panel class="Line"/>
		</Panel>
		 
		  <Panel id="Proto" class="DifficultyPanel" onactivate="DACSetBotDifficulty(6); PlaySoundEffect('DAC_UI.PlayMenu_DifficultySelect')">
          
		  <Panel class="BotImage"/>
          <Label class="TextSubTitle ProtoLabel" text="#DAC_BotDifficultyName5"/>
          <Label class="TextBody" text="#DAC_BotDifficultyDesc5"/>
		  
		  <Panel id="ProtoShield" class="Shield">
			</Panel>
		  
        </Panel>
	
		
		<Panel id="NoBots" class="DifficultyPanel" onactivate="DACSetBotDifficulty(4)">
          <Panel class="BotImage"/>
          <Label class="TextSubTitle NoBotsLabel" text="#DAC_BotDifficultyName4"/>
          <Label class="TextBody" text="#DAC_BotDifficultyDesc4"/>
        </Panel>
      </Panel>	
	  
			<ToggleButton id="PlayPausedButton" onactivate="DACSetPauseMode()">
				<Label class="PlayPausedOption TextBody" html="true" text="#DAC_BotPlayPaused" />
			</ToggleButton>
			
			
			
      <Button id="ContinueButton" class="SimpleButton DifficultyCancelButton" onactivate="DACSetBotDifficulty(5); PlaySoundEffect('DAC_UI.PlayMenu_Cancel')">
        <Label text="#Cancel"/>
      </Button>
		</Panel>
    <Panel class="PopupBottomContainer DifficultyBottom">
    </Panel>
  </PopupBotDifficulty>
</root>
