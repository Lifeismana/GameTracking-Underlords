<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/dac_global.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_generic.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_hero_rotation_intro.vcss_c" />
	</styles>

	<Panel class="PopupPanel Hidden" popupbackground="dim">

		<Panel class="GameLogo" />

		<Label class="Title TextTitleAlt" text="#dac_hero_rotation_popup_title" />
		<Panel id="PopupImage" />

		<Panel class="FeatureList">

			<Panel class="FeatureRow">
				<Label class="FeatureLabel TextSubTitle" text="#dac_hero_rotation_popup_heroes" />
				<Label class="FeatureLabel TextSubTitle" text="#dac_hero_rotation_popup_oldheroes" />
			</Panel>
			
			<Panel class="FeatureRow">
        <Label class="FeatureLabel TextSubTitle" text="#dac_hero_rotation_popup_alliances" />
        <Label class="FeatureLabel TextSubTitle" text="#dac_hero_rotation_popup_items" />
			</Panel>
			
			<Panel class="FeatureRow">
				<Label class="FeatureLabel TextSubTitle" text="#dac_hero_rotation_popup_classic" />
				<Label class="FeatureLabel TextSubTitle" text="#dac_hero_rotation_popup_rankreset" />
			</Panel>

		</Panel>

		<Panel class="ButtonContainer">
			<Button class="SimpleButton" onactivate="UIPopupButtonClicked();">
				<Label text="#Popup_Season_0_Intro_Close" />
			</Button>
			<Button class="SimpleButton" onactivate="UIPopupButtonClicked( DACShowPatchNotesPage() );">
				<Label text="#Popup_Season_0_Intro_Learn_More" />
			</Button>
		</Panel>
	</Panel>
</root>
