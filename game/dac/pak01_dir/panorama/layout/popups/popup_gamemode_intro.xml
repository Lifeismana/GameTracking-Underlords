<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_generic.vcss_c" />
		<include src="s2r://panorama/styles/dac_global.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_gamemode_intro.vcss_c" />
	</styles>

	<Panel class="PopupGameModeIntro" popupbackground="dim" onactivate="UIPopupButtonClicked()">
		<Image id="Background"/>
		<Image id="GameModeIcon"/>
		<Image id="GameModeArt"/>

		<Panel id="StreetfightText" class="GameModeTextContainer">
			<Panel class="ModalTitle">
				<Panel class="StreetFightIcon" />
				<Label class="GameModeHeader" text="#DAC_CC_StreetFight_Modal_Title"/>
			</Panel>
			<Label class="GameModeDesc" text="#DAC_CC_StreetFight_Modal_Desc1"/>
			<Label class="GameModeSubDesc" html="true" text="#DAC_CC_StreetFight_Modal_Desc2"/>

			<Button class="CCButton" onactivate="UIPopupButtonClicked()">
				<Label text="#DAC_Start"/>
			</Button>
		</Panel>
		<Panel id="PuzzleText" class="GameModeTextContainer">
			<Panel class="ModalTitle">
				<Panel class="PuzzleIcon" />
				<Label class="GameModeHeader" text="#DAC_CC_Puzzle_Modal_Title"/>
			</Panel>
			<Label class="GameModeDesc" text="#DAC_CC_Puzzle_Modal_Desc1"/>
			<Label class="GameModeSubDesc" html="true" text="#DAC_CC_Puzzle_Modal_Desc2"/>

			<Button class="CCButton" onactivate="UIPopupButtonClicked()">
				<Label text="#DAC_Start"/>
			</Button>
		</Panel>

		
	</Panel>
</root>
