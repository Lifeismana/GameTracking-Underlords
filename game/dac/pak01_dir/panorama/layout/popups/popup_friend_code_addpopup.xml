<root>
  <styles>
    <include src="s2r://panorama/styles/gamestyles.vcss_c" />
    <include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
    <include src="s2r://panorama/styles/popups/popup_generic.vcss_c" />
    <include src="s2r://panorama/styles/popups/popup_friend_code_addpopup.vcss_c" />
  </styles>
  
  <Panel class="PopupPanel Hidden" popupbackground="dim">
    <Label text="#DAC_FriendCode_FriendPopupTitle" class="PopupTitle"/>

    <DACFriend id="FriendPanel" />

    <Panel class="PopupButtonRow">
      <Button id="OKButton" class="PopupButton" onactivate="DACPopupFriendCodePopupConfirm()">
        <Label text="#OK" />
      </Button>
      <Button class="PopupButton" onactivate="UIPopupButtonClicked()">
        <Label text="#Cancel" />
      </Button>
    </Panel>

  </Panel>
</root>
