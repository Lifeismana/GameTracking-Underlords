<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_generic.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_reward_info.vcss_c" />
	</styles>

	<PopupRewardInfo class="PopupPanel" popupbackground="blur" onactivate="UIPopupButtonClicked( close )">

		<Panel id="RewardContainer">

			<Panel class="ItemContainer">
				<Panel id="ItemImage" />
			</Panel>

			<Panel id="RewardTextContainer">
				<Label class="RewardText RewardTextName" html="true" text="#DAC_Reward_Item_Name" />
				<Label class="RewardText RewardTextType" html="true" text="#DAC_Reward_Item_Type" />
				<Label class="RewardText RewardTextDesc" html="true" text="#DAC_Reward_Item_Desc" />
			</Panel>

		</Panel>

	</PopupRewardInfo>
