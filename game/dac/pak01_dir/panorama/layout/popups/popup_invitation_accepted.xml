<root>
  <styles>
    <include src="s2r://panorama/styles/gamestyles.vcss_c" />
    <include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
    <include src="s2r://panorama/styles/popups/popup_generic.vcss_c" />
    <include src="s2r://panorama/styles/popups/popup_invitation_accepted.vcss_c" />
  </styles>

  <Panel class="PopupPanel Hidden" popupbackground="dim" defaultfocus="OKButton">
    <Label text="#DAC_AcceptedInvitation_Title" class="TextHeader"/>

	<Label id="AcceptedMessage" text="#DAC_AcceptedInvitation_Name" />

    <Panel class="PopupButtonRow">
      <Panel class="ButtonContainer">
        <Button id="OKButton" class="PopupButton" onactivate="DACPopupInvitationAcceptedDone()">
          <Label text="#OK" />
        </Button>
      </Panel>
    </Panel>

  </Panel>
