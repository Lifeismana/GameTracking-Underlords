<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/dac_global.vcss_c" />
		<include src="s2r://panorama/styles/dac_ui_hud.vcss_c" />
		<include src="s2r://panorama/styles/dac_ui_puzzle_status.vcss_c" />
	</styles>

	<snippets>
		<snippet name="PuzzleRuleRow">
			<Panel class="PuzzleRuleRow">
				<Panel class="PuzzleRuleIcon Gold" />
				<Panel class="PuzzleRuleTextContainer">
					<Label class="PuzzleRule" text="#dac_puzzle_rules_max_gold" />
					<Label class="PuzzleRuleSubtitle" text="#dac_puzzle_rules_max_gold_subtitle" />
				</Panel>
			</Panel>
		</snippet>
	</snippets>

	<DACUIPuzzleStatus>
		<Panel id="PuzzleStatusTitle">
			<Panel id="PuzzleLabel">
				<Panel id="PuzzleIcon" />
				<Label class="PuzzleLabel" text="#DAC_CC_ChallengeType_Puzzle" />
			</Panel>
			<Label class="PuzzleTitle" text="{s:title}" />
		</Panel>

		<Panel id="PuzzleStatusContent">
			<DACUIPuzzleRules />
			<!-- <Label class="PuzzleCompletion" text="#dac_puzzle_incomplete" /> -->
		</Panel>

	</DACUIPuzzleStatus>

</root>