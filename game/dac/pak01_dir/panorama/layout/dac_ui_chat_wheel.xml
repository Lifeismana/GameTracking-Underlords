<root>
	<styles>
    <include src="s2r://panorama/styles/gamestyles.vcss_c" />
    <include src="s2r://panorama/styles/dac_global.vcss_c" />
    <include src="s2r://panorama/styles/dac_ui_chat_wheel.vcss_c" />
  </styles>

	<snippets>
		<snippet name="Phrase">
			<Panel class="Phrase">
				<Panel class="ChatWheelSoundIcon" />
				<Image class="ChatWheelSprayImage" id="ChatWheelSprayImage" />
				<Panel class="ChatWheelRequiredTierIcon PlusHeroBadgeIconSmall">
					<Panel class="ChatWheelRequiredTierLockIconShadow" />
					<Panel class="ChatWheelRequiredTierLockIcon" />
				</Panel>
				<Label class="ChatWheelAllPrefix" text="#dota_all_chat_label_prefix" />
				<Label text="{s:phrase}" />
			</Panel>
		</snippet>
	</snippets>
	
	<DACChatWheel class="Hidden" hittest="false" hittestchildren="false">
		<Panel id="Wheel">
			<Panel id="Arrow" class="Hidden" />
			<Panel id="PointerContainer">
				<Panel id="WheelPointer" />
			</Panel>
			<Panel id="WheelBG">
				<Panel id="WheelCenter">
					<Panel id="WheelBG2" />
				</Panel>
			</Panel>
			<Panel id="Bubble"/>
		</Panel>
		<Panel id="PhrasesContainer">
			<!-- Filled in dynamically with Phrase snippets -->
		</Panel>
	</DACChatWheel>
</root>


