<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/dac_global.vcss_c" />
		<include src="s2r://panorama/styles/dac_ui_vs_screen.vcss_c" />
	</styles>
	<snippets>

	</snippets>

	<DACVSScreen>
		<DACMiniProfile id="VSMiniProfile"/>

		<Panel id="NeutralRoundImage"/>
		
		<Panel id ="NextOpponentContainer">
			<Panel id="PlayerOpponent">
				<Label class="VSPersona" text="{g:dac_player_slot_persona:opponent_player_slot}" html="true"/>
			</Panel>
			<Panel id="NeutralOpponent">
				<Label class="VSPersona" text="{s:neutral_wave_name}" html="true"/>
				<Label class="LootRound" text="#DAC_InGame_LootRound"/>
			</Panel>
								
			<Panel id="WinLossRecord">
				<Label id="FirstEncounterText"		class="WinLossText" text="#DAC_InGame_VsOpponentFirstEncounter" html="true"/>
				<Label id="WinLossHeader"			class="WinLossText" text="#DAC_InGame_VsOpponentRecordTitle" html="true"/>
				<Label id="WinLossRecordText"		class="WinLossText" text="#DAC_InGame_VsOpponentRecordWinLoss"/>
				<Label id="WinLossDrawRecordText"	class="WinLossText" text="#DAC_InGame_VsOpponentRecordWinLossDraw"/>
			</Panel>
			<Panel id="OpponentSynergies" />
		
		</Panel>
		
	</DACVSScreen>
</root>
